CREATE PROCEDURE [dbo].[insertEmpleadoActivo]
  @ID_Activo_Fisico INT,
  @EmpCodigo INT
AS
BEGIN
  INSERT INTO Empleado_Activo (
    ID_Activo_Fisico,
    EmpCodigo,
    Fecha_Asignacion
  )
  VALUES (
    @ID_Activo_Fisico,
    @EmpCodigo,
    GETDATE()
  );
END;
GO
